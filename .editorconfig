root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.rs]
indent_style = space
indent_size = 4

[*.{ts,js,json,yaml,yml}]
indent_style = space
indent_size = 2

[*.dart]
indent_style = space
indent_size = 2

[*.{md,mdx}]
trim_trailing_whitespace = false

[*.toml]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[justfile]
indent_style = space
indent_size = 4
